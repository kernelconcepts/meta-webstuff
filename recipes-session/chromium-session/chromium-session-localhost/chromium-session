#!/bin/sh
#
# Script that starts a Chromium kiosk session on localhost

SESSION_DIR=/etc/mini_x/session.d
CHROMIUM_APP="http://localhost:8080"

# Execute session file on behalf of file owner
if [ -d $SESSION_DIR ]; then
    for SESSIONFILE in $SESSION_DIR/*; do
	set +e
	USERNAME=`stat -c %U $SESSIONFILE`
	sudo -b -i -u $USERNAME $SESSIONFILE&
	set -e
    done
fi

# Disable Screen saver and blanking
xset s off
xset s noblank
xset -dpms

/usr/bin/chromium --disable-gpu --disable-features=TranslateUI --test-type --no-sandbox --disable-session-chrashed-bubble --kiosk --app=$CHROMIUM_APP &

killall psplash
killall dotsplash

exec matchbox-window-manager -use_cursor yes
